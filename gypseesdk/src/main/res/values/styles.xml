<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="actionMenuTextColor">@android:color/white</item>
<!--        <item name="colorPrimary" tools:ignore="PrivateResource">@color/colorPrimary</item>-->
        <item name="colorPrimary" tools:ignore="PrivateResource">#192E44</item>
        <item name="colorPrimaryDark" tools:ignore="PrivateResource">@color/colorPrimaryDark</item>
<!--        <item name="colorPrimaryDark" tools:ignore="PrivateResource">#192E44</item>-->
        <item name="colorAccent" tools:ignore="PrivateResource">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_grey</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:fontFamily">@font/open_sans</item>


    </style>

    <style name="LatoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">lato</item>
    </style>

    <style name="LatoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">lato</item>
    </style>

    <style name="MyActionButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:minWidth">20dip</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="Tooltip">
        <item name="android:textSize">16sp</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="cornerRadius">10dp</item>
