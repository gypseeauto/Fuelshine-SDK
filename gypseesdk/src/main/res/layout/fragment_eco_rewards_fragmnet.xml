    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:id="@+id/back_button_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        >
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/backImg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/fs_green_back_img"
            android:clipToOutline="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/poppins"
            android:lineHeight="21sp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/back_button_layout"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back_button_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Fuelshine Eco Reward Card"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:lineHeight="36sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:gravity="center_horizontal|top"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rewards_details_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileText"
        android:layout_alignParentLeft="true"
        android:padding="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/eco_rewards_box"
        android:elevation="4dp"
        >

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/generate_qr"
            />

        <!--        android:background="@drawable/qr_code_"-->

        <TextView
            android:id="@+id/generate_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/qr_code"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:lineHeight="17sp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/generate_qr"
            android:textAppearance="@style/generate_qr"
            android:gravity="center_horizontal|top"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_alignParentTop="true"
                android:text="Prakriti M"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:lineHeight="19sp"
                android:gravity="top"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/points_balance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:text="@string/point_balance"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textColor="@color/white"
                    android:fontFamily="@font/teachers_regular"
                    android:lineHeight="19sp"
                    android:gravity="top"
                    />

                <TextView
                    android:id="@+id/points_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    app:layout_constraintStart_toEndOf="@id/points_balance_text"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:text="4600"
                    android:layout_marginStart="15dp"
                    android:layout_alignEnd="@id/points_balance_text"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textColor="@color/white"
                    android:fontFamily="@font/teachers_regular"
                    android:lineHeight="19sp"
                    android:gravity="top"
                    />


                <TextView
                    android:id="@+id/points_earned_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/points_balance_text"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:text="@string/points_earned"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textColor="@color/white"
                    android:fontFamily="@font/teachers_regular"
                    android:lineHeight="19sp"
                    android:gravity="top"
                    />

                <TextView
                    android:id="@+id/points_earned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    app:layout_constraintStart_toEndOf="@id/points_earned_text"
                    app:layout_constraintTop_toBottomOf="@id/points_balance"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:text="4600"
                    android:layout_marginStart="15dp"
                    android:layout_alignEnd="@id/points_balance_text"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textColor="@color/white"
                    android:fontFamily="@font/teachers_regular"
                    android:lineHeight="19sp"
                    android:gravity="top"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>





        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/your_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@id/rewards_details_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/poppins"
        android:lineHeight="19sp"
        android:text="@string/your_coupon"
        android:letterSpacing="0.03"
        android:gravity="center_horizontal|top"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/coupons_recView"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/your_coupon"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/coupons_list"
        />

    <TextView
        android:id="@+id/recent_tran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/coupons_recView"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/recent_tran"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.03"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:lineHeight="19sp"
        android:gravity="center_horizontal|top"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/coupons_recView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:id="@+id/transactions"
        android:src="@drawable/date_pick_img"
        android:layout_marginTop="12dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recent_tran"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/transactions_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>