    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_bg"
            >



            <RelativeLayout
                android:id="@+id/rectangle_1"
                android:layout_width="match_parent"
                android:layout_height="333dp"
                android:background="@drawable/background"
                >



                <ImageView
                    android:layout_marginTop="140dp"
                    android:src="@drawable/app_icon"
                    android:id="@+id/log_element"
                    android:layout_width="180dp"
                    android:layout_height="63dp"
                    android:clipToOutline="true"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fuelshine"
                    android:id="@+id/fuelshineText"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="155dp"
                    android:layout_marginTop="140dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/log_element"
                    android:layout_marginStart="155dp"
                    android:textSize="14sp"
                    android:text="@string/turns_fuel_into_savings"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    />


                <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frame_272"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:layout_below="@id/rectangle_1"
                android:layout_alignParentBottom="true"
                android:background="@drawable/corner_box"
                tools:layout_editor_absoluteX="-44dp">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save_fuel"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/by_driving_safe"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout1"
                    android:gravity="center_horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/efficiently"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to_earn_rewards"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout2"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/te_enviarem"
                        android:layout_width="335dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_horizontal|top"
                        android:text="@string/we_send_you_a_conformation_code"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/level"
                    android:layout_width="335dp"
                    android:layout_height="21dp"
                    android:layout_below="@id/layout3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/poppins"
                        android:gravity="top"
                        android:lineHeight="21sp"
                        android:text="@string/country_code"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="top"
                        android:lineHeight="21sp"
                        android:text="@string/phone_number"
                        android:textColor="@color/colorPrimaryDark"

                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/numBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/level"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20sp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:clickable="true"
                        android:layout_width="113dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/input"
                        android:id="@+id/countryCode"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/dropicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/octicon_chevron_up" />

                        <TextView
                            android:id="@+id/countryCodeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:text="@string/ind_91"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </RelativeLayout>


                    <EditText
                        android:id="@+id/loginMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="10dp"
                        android:hint="@string/enter_mobile_number"
                        android:background="@drawable/input"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingStart="5dp" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rightImage"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/poppins"
                    android:layout_below="@id/numBox"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bottons"
                    android:text="@string/verifiy" />


                <TextView
                    android:id="@id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rightImage"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/already_have_an_account_log_in"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/signupBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gmailLogin"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="40dp"
                        android:layout_below="@id/numBox"
                        android:paddingTop="3dp"
                        android:src="@drawable/google" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/log_in_with_google"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />




                    <TextView
                        android:id="@+id/facebookLogin"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/numBox"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/signup"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:text="@string/facebook"
                        android:textAlignment="center"
                        android:textColor="@color/light_green"
                        android:textSize="15sp"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signupBox"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/welcome_to_fuelshine"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp" />


                <LinearLayout
                    android:id="@+id/loginbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signupBox"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_horizontal|top"
                        android:text="@string/do_you_already_have_an_account"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />



                    <TextView
                        android:id="@+id/login_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_horizontal|top"
                        android:text="@string/log_in"
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:textColor="@color/light_green" />


                </LinearLayout>


            </RelativeLayout>


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:visibility="gone"
                />




        </RelativeLayout>

    </ScrollView>






</FrameLayout>