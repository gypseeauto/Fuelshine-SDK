<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.QrCodeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:background="@color/green"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_button"
            android:id="@+id/backBtn"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:fontFamily="@font/poppins"
            android:layout_centerVertical="true"
            android:layout_marginStart="50sp"
            android:text="Generate QR"
            android:textColor="@color/white"
            android:layout_alignStart="@id/backBtn"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/qr_box"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/qr_box"
        android:elevation="4dp"
        >

        <ImageView
            android:id="@+id/qr_img"
            android:layout_width="188dp"
            android:layout_height="188dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_box"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/qr_box"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/expires_in_"
            android:fontFamily="@font/teachers_regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:letterSpacing="0.03"
            android:lineHeight="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:id="@+id/timer"
            android:fontFamily="@font/teachers_regular"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:text="9 min : 08 sec"
            android:letterSpacing="0.03"
            android:lineHeight="17sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/otp_box"
        app:layout_constraintTop_toBottomOf="@id/time_box"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:lineHeight="58sp"
            android:fontFamily="@font/teachers_regular"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:visibility="gone"
            android:letterSpacing="0.5"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:id="@+id/ellipse_1"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            />

        <TextView
            android:id="@+id/ellipse_2"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            />

        <TextView
            android:id="@+id/ellipse_3"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            />

        <TextView
            android:id="@+id/ellipse_4"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:background="@drawable/circle"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/showOrHideCode"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/hide_img"
            android:layout_marginStart="10dp"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/eco_point_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eco_point_r"
        android:gravity="center_horizontal|top"
        android:fontFamily="@font/inter_regular"
        android:lineHeight="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/otp_box"
        android:layout_marginTop="15dp"
        android:textColor="@color/unchecked_thumb"
        />





    <RelativeLayout
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/box"
        app:layout_constraintTop_toBottomOf="@id/eco_point_r"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/please_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_show"
            android:fontFamily="@font/teachers_regular"
            android:lineHeight="17sp"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:letterSpacing="0.03"
            android:textColor="@color/white"
            android:gravity="center_horizontal|top"
            />



    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>