    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBack"
        >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteBack"
                >

                <RelativeLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/performance_info"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/performance_text"
                        android:layout_width="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:text="@string/performance_title"
                        android:lineHeight="36sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:gravity="center_horizontal|top"
                        />

                    <ImageView
                        android:id="@+id/date_layout"
                        android:layout_width="24dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="24dp"
                        android:src="@drawable/date_pick_img"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="6dp"
                        android:clipToOutline="true"
                        />

                    <TextView
                        android:id="@+id/performance_date"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="@string/today"
                        android:fontFamily="@font/poppins"
                        android:lineHeight="20sp"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:textColor="@color/light_grey"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/performance_text"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_horizontal|top"
                        />


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@id/performance_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="8dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/performance_bg"
                        >

                        <RelativeLayout
                            android:id="@+id/box1"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/box2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="73dp"
                            android:layout_height="40dp"
                            android:foregroundGravity="center"
                            >

                            <TextView
                                android:id="@+id/driver"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textSize="13sp"
                                android:textColor="@color/dark_blue"
                                android:text="@string/driver"
                                android:lineHeight="20sp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_horizontal|top"
                                />


                            <TextView
                                android:id="@+id/level_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/driver"
                                android:layout_marginTop="-2dp"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center_horizontal|top"
                                android:lineHeight="20sp"
                                android:text="@string/level_1"
                                android:textAlignment="center"
                                android:textColor="@color/dark_blue"
                                android:textSize="13sp"
                                android:textStyle="bold" />






                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/box2"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/box1"
                            app:layout_constraintEnd_toStartOf="@id/box3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="73dp"
                            android:layout_height="40dp"
                            >

                            <TextView
                                android:id="@+id/safe_km"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textSize="13sp"
                                android:textColor="@color/dark_blue"
                                android:text="@string/safe_km"
                                android:lineHeight="20sp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_horizontal|top"
                                />


                            <TextView
                                android:id="@+id/kmDrivenTv"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_below="@id/safe_km"
                                android:text="@string/_0_0"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:lineHeight="20sp"
                                android:textColor="@color/dark_blue"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:gravity="center_horizontal|top"
                                />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/box3"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/box2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="73dp"
                            android:layout_height="40dp"
                            >

                            <TextView
                                android:id="@+id/safe_per"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textSize="13sp"
                                android:textColor="@color/dark_blue"
                                android:text="@string/safe_km_per"
                                android:lineHeight="20sp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_horizontal|top"
                                />


                            <TextView
                                android:id="@+id/level_3"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_below="@id/safe_per"
                                android:text="@string/_0_0per"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="13sp"
                                android:lineHeight="20sp"
                                android:textColor="@color/dark_blue"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:gravity="center_horizontal|top"
                                />


                        </RelativeLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>





                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/crdView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"

                    tools:listitem="@layout/card_speed_layout"
                    android:layout_marginTop="10dp"
                    android:id="@+id/performamce_recView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/colorPrimaryDark"
                    android:id="@id/progressBar"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/crdView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>


















    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>