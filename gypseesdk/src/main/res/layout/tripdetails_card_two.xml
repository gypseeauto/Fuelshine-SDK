<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="Trip Summary"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/circleshape" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="40dp"
                android:layout_toEndOf="@+id/circle1"
                android:maxLines="2"
                android:minLines="2"
                android:text="Kormangala"
                android:textAllCaps="true"
                android:textColor="@color/text_black"
                android:textSize="9dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/borderView"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/destination"
                android:layout_below="@+id/circle1"
                android:layout_marginStart="5dp"

                android:background="@drawable/vertical_dotted_line_blue" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/origin"
                android:background="@drawable/ic_gps" />

            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/origin"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/circle2"
                android:maxLines="2"
                android:minLines="2"
                android:text="HSR Layout"
                android:textAllCaps="true"
                android:textColor="@color/text_black"
                android:textSize="9dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

