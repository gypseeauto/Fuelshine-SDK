<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Drive Safe Subscription"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTv"
                android:gravity="center"
                android:paddingStart="14dp"
                android:fontFamily="@font/poppins"
                android:paddingTop="12dp"
                android:paddingEnd="14dp"
                android:paddingBottom="12dp"
                android:text="Subscribe now to get driving report and curated discounts on your favorite brands which saves money on car insurance, services, smart car accessories and many more."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/referralCodeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionTV"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/white_curvedcorners_bg"
                android:hint="Enter Subscription Code"
                android:imeOptions="actionDone"
                android:inputType="textCapCharacters"
                android:maxLength="10"
                android:fontFamily="@font/poppins"
                android:padding="7dp"
                android:singleLine="true"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/grey"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/subscribe_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/referralCodeEt"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@color/theme_blue"
                android:gravity="center"
                android:padding="12dp"
                android:text="Subscribe Now"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/referralCodeEt"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>