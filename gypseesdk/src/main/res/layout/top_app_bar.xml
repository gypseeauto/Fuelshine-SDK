<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_bar_fue"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/bluetooth_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bluetooth_icon"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <ImageView
            android:id="@+id/notificationImg"
            android:layout_width="40dp"
            android:scaleType="centerInside"
            android:layout_height="40dp"
            android:src="@drawable/notification_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintEnd_toStartOf="@id/profileImgHolder"
            android:layout_marginStart="80dp"
            android:background="@drawable/alert"
            android:visibility="gone"
            />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintEnd_toStartOf="@id/profileImgHolder"
            android:layout_marginStart="58dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            />




        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/logo"
            />

        <LinearLayout
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/profileImgHolder"
            android:layout_gravity="center"
            android:background="@drawable/img"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent" />


        </LinearLayout>

