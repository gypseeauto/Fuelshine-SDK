<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:theme="@style/CustomCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/device_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/device_online_dot"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:visibility="invisible"
        android:background="@drawable/connected_dot"
        android:layout_gravity="top"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="2dp"
        />

    <LinearLayout
        android:id="@+id/device_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginVertical="6dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/device_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:text="CRUST Smart Car charger CRUST 20"
         />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/grey_light"
            android:layout_marginBottom="4dp"
            android:textSize="7dp"
            android:text="CRUST Smart Car charger CRUST 20"
            />

    <TextView
        android:id="@+id/device_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7dp"
        android:maxLines="2"
        android:textColor="@color/grey_light"
        android:ellipsize="end"
        android:text="Last Connected 9.30PM, 03 July"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/device_add_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="4dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_light"
            android:text="Add Device"/>

    </LinearLayout>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>